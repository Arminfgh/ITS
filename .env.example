# ============================================================================
# SECUREOFFICE HUB - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================================================

# Application
SECUREOFFICE_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Security
API_KEY=your-secret-api-key-change-this
SECRET_KEY=your-super-secret-jwt-key-min-32-chars

# Database
DATABASE_URL=sqlite:///./database/security.db

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Threat Intelligence APIs
OTX_API_KEY=your-alienvault-otx-api-key
ABUSE_CH_API_KEY=optional-abuse-ch-key

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@secureoffice.local

# Scanning Configuration
MAX_SCAN_THREADS=20
SCAN_TIMEOUT=5
DEFAULT_PORTS=21,22,23,80,443,445,3306,3389

# Reports
REPORTS_DIR=./data/reports
PDF_LOGO_PATH=./assets/logo.png

# Dashboard
DASHBOARD_PORT=8501
API_PORT=8000

# Docker
COMPOSE_PROJECT_NAME=secureoffice